{% extends 'base.html.twig' %}

{% block title %}Booking{% endblock %}

{% block body %}
    <h1>Booking</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ booking.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ booking.code }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ booking.price }}</td>
            </tr>
            <tr>
                <th>FromDate</th>
                <td>{{ booking.fromDate ? booking.fromDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>ToDate</th>
                <td>{{ booking.toDate ? booking.toDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>RoomCount</th>
                <td>{{ booking.roomCount }}</td>
            </tr>
            <tr>
                <th>Accept</th>
                <td>{{ booking.accept }}</td>
            </tr>
            <tr>
                <th>Person</th>
                <td>{{ booking.person }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('booking_index') }}">back to list</a>

    <a href="{{ path('booking_edit', {'id': booking.id}) }}">edit</a>

    {{ include('booking/_delete_form.html.twig') }}
{% endblock %}
