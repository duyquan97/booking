{% extends 'base.html.twig' %}

{% block title %}Room{% endblock %}

{% block body %}
    <h1>Room</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ room.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ room.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ room.slug }}</td>
            </tr>
            <tr>
                <th>ShortDescription</th>
                <td>{{ room.shortDescription }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ room.description }}</td>
            </tr>
            <tr>
                <th>Province</th>
                <td>{{ room.province }}</td>
            </tr>
            <tr>
                <th>District</th>
                <td>{{ room.district }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ room.street }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ room.type == 1 ? 'VIP' : 'CÃ¹i' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ room.status == 1 ? 'On' : 'Off'}}</td>
            </tr>
            <tr>
                <th>Featured</th>
                <td>{{ room.featured == 1 ? 'On' : 'Off'}}</td>
            </tr>
        </tbody>
    </table>
    <h3>Booking</h3>
    {% for message in app.flashes('error') %}
        {% if message|length > 0 %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endif %}
    {% endfor %}
    <div class="booking">
        <div class="row">
            <form action="{{ path('booking_check') }}" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label> From Date</label>
                            <input type="text" name="fromDate" class="form-control datetimepicker" required value="{{ fromDate ? fromDate : "now"|date("Y-m-d") }}">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label> To Date</label>
                            <input type="text" name="toDate" class="form-control datetimepicker" required value="{{ toDate ? toDate : "tomorrow"|date("Y-m-d") }}">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label> RoomCount</label>
                            <input type="number" name="roomCount" min="1" class="form-control" required>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label> Person</label>
                            <input type="number" name="person" min="1" class="form-control" required>
                        </div>
                    </div>
                    <input type="text" name="roomId" value="{{ room.id }}" style="display: none">
                    <div class="col-md-12">
                        <input type="submit" class="btn btn-success" value="Book">
                    </div>
                </div>
            </form>
        </div>
    </div>

    <a href="{{ path('room_index') }}">back to list</a>


{% endblock %}
